@model ProductDetailsModel
@using Nop.Web.Models.Catalog;
@if (Model.CompareProductsEnabled)
{
    <div class="compare-products">
        <input type="button" value="@T("Products.Compare.AddToCompareList")" class="add-to-compare-list-button" onclick="setLocation('@Url.RouteUrl("AddProductToCompare", new { productId = Model.Id })')" />
    </div>
}