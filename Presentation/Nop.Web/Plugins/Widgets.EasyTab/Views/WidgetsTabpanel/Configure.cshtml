<script type="text/javascript">
    $(document).ready(function () {
        $(".check-all").hide();
    });
    
</script>
@using (Html.BeginForm())
{
    <fieldset>
        <legend><strong>@T("Plugins.Widgets.EasyTab.ConfigureTabPanel")</strong></legend>
