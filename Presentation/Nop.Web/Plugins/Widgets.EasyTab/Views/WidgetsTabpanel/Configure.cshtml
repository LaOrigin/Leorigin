                <td class="adminTitle">
                    @Html.NopLabelFor(model => model.DescriptionEnable):
                </td>
                <td class="adminData">
                    @Html.EditorFor(model => model.DescriptionEnable)
                    @Html.ValidationMessageFor(model => model.DescriptionEnable)
                </td>
            </tr>
            <tr>
                <td class="adminTitle">
                    @Html.NopLabelFor(model => model.TagsEnable):
                </td>
                <td class="adminData">
                    @Html.EditorFor(model => model.TagsEnable)
