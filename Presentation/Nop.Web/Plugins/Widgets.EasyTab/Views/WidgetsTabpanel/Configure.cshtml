                </td>
            </tr>
            <tr>
                <td class="adminTitle">
                    @Html.NopLabelFor(model => model.SpecificationEnable):
                </td>
                <td class="adminData">
                    @Html.EditorFor(model => model.SpecificationEnable)
                    @Html.ValidationMessageFor(model => model.SpecificationEnable)
                </td>
            </tr>
            <tr>
                <td class="adminTitle">
                    @Html.NopLabelFor(model => model.RelatedproductEnable):
                </td>
                <td class="adminData">
                    @Html.EditorFor(model => model.RelatedproductEnable)
                    @Html.ValidationMessageFor(model => model.RelatedproductEnable)
                </td>
            </tr>
            <tr>
                <td class="adminTitle">
                    @Html.NopLabelFor(model => model.ProductalsopurchasedEnable):
                </td>
                <td class="adminData">
                    @Html.EditorFor(model => model.ProductalsopurchasedEnable)
